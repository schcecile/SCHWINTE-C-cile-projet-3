{% extends 'base.html.twig' %}

{% block title %}Calendar{% endblock %}

{% block body %}
    <div class="container py-5">

        <div class="text-right" style="display: flex; float: right">
            <button class="btn"><a href="{{ path('calendar_edit', {'id': calendar.id}) }}">Modifier l'événement</a></button>
            {{ include('calendar/_delete_form.html.twig') }}
        </div>

        <h1>{{ calendar.title }}</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Numéro</th>
                    <td>{{ calendar.id }}</td>
                </tr>
                <tr>
                    <th>Titre</th>
                    <td>{{ calendar.title }}</td>
                </tr>
                <tr>
                    <th>Début</th>
                    <td>{{ calendar.start ? calendar.start|date('d-m-y H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Fin</th>
                    <td>{{ calendar.end ? calendar.end|date('d-m-y H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ calendar.description }}</td>
                </tr>
                <tr>
                    <th>Journée entière</th>
                    <td>{{ calendar.allDay ? 'Oui' : 'Non' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('calendar_index') }}">Retour à la liste</a>
    </div>
{% endblock %}
