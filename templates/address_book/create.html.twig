{% extends 'base.html.twig' %}

{% block title %}Nouveau contact{% endblock %}

{% block body %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('address_index') }}">Carnet de contact</a></li>
            <li class="breadcrumb-item active" aria-current="page">Nouveau contact</li>
        </ol>
    </nav>
    <div class="container py-5">

        <h1>Nouveau contact</h1>

        <br>

        <form action="{{ url('address_store') }}" method="POST">

            <div class="form-check form-check-inline">
                <label class="form-check-label" for="male">
                <input class="form-check-input" type="radio" name="title" id="male" value="Monsieur" checked>
                    Monsieur
                </label>
            </div>
            <div class="form-check form-check-inline">
                <label class="form-check-label" for="female">
                <input class="form-check-input" type="radio" name="title" id="female" value="Madame">
                    Madame
                </label>
            </div>

            <br><br>

            <div class="form-group">
                <label for="first_name">Prénom</label>
                <input type="text" class="form-control" id="first_name" name="first_name">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>

            <div class="form-group">
                <label for="last_name">Nom</label>
                <input type="text" class="form-control" id="last_name" name="last_name">
            </div>

            <div class="form-group">
                <label for="email">Adresse email</label>
                <input type="email" class="form-control" id="email" name="email">
            </div>

            <div class="form-group">
                <label for="mobile">Numéro de téléphone</label>
                <input type="text" class="form-control" id="mobile" name="mobile">
            </div>


            <label for="category">Catégorie</label>
            <select name="category" class="custom-select">
                <option selected>Choisssez la catégorie...</option>
                <option value="Client">Client</option>
                <option value="Fournisseur">Fournisseur</option>
                <option value="Collaborateur">Collaborateur</option>
                <option value="Prestataire">Prestataire</option>
            </select>

            <br><br>
            <div class="text-center">
                    <button type="submit" class="btn btn-primary">Enregistrer</button>
            </div>

        </form>

    </div>
{% endblock %}

